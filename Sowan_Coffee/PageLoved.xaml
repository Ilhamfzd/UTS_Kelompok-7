<Page x:Class="Sowan_Coffee.PageLoved"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sowan_Coffee"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DrinkPage" Height="844" Width="390" MaxWidth="390" MaxHeight="844" MinWidth="390" MinHeight="844" Background="#FF0C0F14">

    <StackPanel Margin="0">
        <DockPanel>
            <Frame x:Name="NavigationPageLoved" NavigationUIVisibility="Hidden" />
        </DockPanel>
        <Grid Width="336" Margin="0,26,0,0">
            <Image Source="/img/Icon Navbar.png" Width="32" Height="21" HorizontalAlignment="Left"></Image>
            <Image Source="/img/Icon Cart 2.png" Width="37" HorizontalAlignment="Right"></Image>
        </Grid>
        <Grid Width="286" Height="44" Margin="0,14,0,0" >

            <TextBox BorderBrush="#00232323" Background="#FF232323" Width="286" Height="44" SelectionBrush="#000078D7" Foreground="#FFA0A0A0">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <TextBlock Background="#00232323" Foreground="#FFA0A0A0" Width="52" Height="23" FontFamily="Poppins" FontSize="15" FontWeight="Light" Text="Search" HorizontalAlignment="Left" Margin="25,0,0,0"></TextBlock>
            <Image Source="/img/Icon Search.png" Width="34" HorizontalAlignment="Right" Margin="0,0,6,0" VerticalAlignment="Center"></Image>
        </Grid>
        <Grid Width="127" Height="35" Margin="129,6,134,0" HorizontalAlignment="Left">
            <TextBlock Background="#00232323" Foreground="#FF693D21" Width="55" Height="23" FontFamily="Poppins" FontSize="20" FontWeight="SemiBold" Text="Drink" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top"></TextBlock>
            <Image Source="/img/Icon Slide Bar 2.png" Width="33" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="9,0,0,0"></Image>
            <Button Margin="0,6" HorizontalAlignment="Right" VerticalAlignment="Center" Width="63" Height="35" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="BtnClickFood">
                <TextBlock Background="#00232323" Foreground="#FFA0A0A0"  FontFamily="Poppins" FontSize="16" FontWeight="Light" Text="Food"></TextBlock>
            </Button>

        </Grid>
        <Grid Width="350" Height="35" HorizontalAlignment="Center" Margin="0,18,0,0">
            <Button Width="114" Height="33" HorizontalAlignment="Left" BorderBrush="#00707070" Background="#FF693D21" Foreground="White" FontFamily="Poppins" FontWeight="Medium" Content="Signature">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Width="114" Height="33" HorizontalAlignment="Center" BorderBrush="#00707070" Background="#FF202020" Foreground="#FFA0A0A0" FontFamily="Poppins" FontWeight="Medium" Content="Manual Brew" Margin="9,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Width="114" Height="33" BorderBrush="#00707070" Background="#FF202020" Foreground="#FFA0A0A0" FontFamily="Poppins" FontWeight="Medium" Content="Non Coffee" Margin="0" HorizontalAlignment="Right">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
        <Grid Width="366" Height="482" Margin="0,16,0,0" HorizontalAlignment="Center">
            <Grid Width="181" Height="239" VerticalAlignment="Top" HorizontalAlignment="Left">
                <Border Width="181" Height="239" Background="#FF202020" CornerRadius="20, 20, 20, 20"/>
                <Grid Width="163" Margin="9,10,9,0" VerticalAlignment="Top">
                    <Button Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="BtnClickDsk">
                        <Image Source="/img/Drink Image 1.png" ></Image>
                    </Button>
                    <Image Source="/img/Icon Rating.png" Width="41" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,6,0,0"></Image>
                    <Button Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Width="44" Height="44" HorizontalAlignment="Right" Margin="0,3,6,0" VerticalAlignment="Top">
                        <Image Source="/img/Icon Love 2.png"></Image>
                    </Button>
                </Grid>

                <TextBlock Foreground="#FFB87651" FontFamily="Mada" FontWeight="Medium" FontSize="20" Text="Latte Art" Margin="11,171,0,0" Height="26" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80"/>
                <TextBlock Foreground="White" Width="72" Height="15" FontFamily="Poppins" Text="with fresh milk" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12,191,0,0" FontWeight="Light"></TextBlock>
                <TextBlock Foreground="#FFB87651" FontSize="14" FontFamily="Inter" FontWeight="Medium" Text="IDR." Margin="12,206,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBlock Foreground="White" FontSize="14" FontFamily="Inter" FontWeight="Medium" Text="19.000" Margin="39,206,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBlock>

                <Button Width="34" HorizontalAlignment="Right" Margin="0,163,11,0" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Height="34">
                    <Image Source="/img/Icon Arrow 2.png" Width="34"/>
                </Button>
            </Grid>
            <Grid Width="181" Height="239" VerticalAlignment="Top" HorizontalAlignment="Right">
                <Border Width="181" Height="239" Background="#FF202020" CornerRadius="20, 20, 20, 20"/>
                <Grid Width="163" Margin="9,10,9,0" VerticalAlignment="Top">
                    <Button Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}">
                        <Image Source="/img/Drink Image 2.png" ></Image>
                    </Button>
                    <Image Source="/img/Icon Rating.png" Width="41" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,6,0,0"></Image>
                    <Button Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Width="44" Height="44" HorizontalAlignment="Right" Margin="0,3,6,0" VerticalAlignment="Top">
                        <Image Source="/img/Icon Love 3.png"></Image>
                    </Button>
                </Grid>

                <TextBlock Foreground="#FFB87651" FontFamily="Mada" FontWeight="Medium" FontSize="20" Text="Cappucino" Margin="11,171,0,0" Height="26" HorizontalAlignment="Left" VerticalAlignment="Top" Width="98"/>
                <TextBlock Foreground="White" Width="73" Height="15" FontFamily="Poppins" Text="with chocolate" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12,192,0,0" FontWeight="Light"></TextBlock>
                <TextBlock Foreground="#FFB87651" FontSize="14" FontFamily="Inter" FontWeight="Medium" Text="IDR." Margin="12,206,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBlock Foreground="White" FontSize="14" FontFamily="Inter" FontWeight="Medium" Text="20.000" Margin="39,206,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBlock>

                <Button Width="34" HorizontalAlignment="Right" Margin="0,163,11,0" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Height="34">
                    <Image Source="/img/Icon Arrow 2.png" Width="34"/>
                </Button>
            </Grid>
            <Grid Width="181" Height="239" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                <Border Width="181" Height="239" Background="#FF202020" CornerRadius="20, 20, 20, 20"/>
                <Grid Width="163" Margin="9,10,9,0" VerticalAlignment="Top">
                    <Button Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}">
                        <Image Source="/img/Drink Image 3.png" ></Image>
                    </Button>
                    <Image Source="/img/Icon Rating.png" Width="41" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,6,0,0"></Image>
                    <Button Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Width="44" Height="44" HorizontalAlignment="Right" Margin="0,3,6,0" VerticalAlignment="Top">
                        <Image Source="/img/Icon Love 2.png"></Image>
                    </Button>
                </Grid>

                <TextBlock Foreground="#FFB87651" FontFamily="Mada" FontWeight="Medium" FontSize="20" Text="Espresso" Margin="11,171,0,0" Height="26" HorizontalAlignment="Left" VerticalAlignment="Top" Width="76"/>
                <TextBlock Foreground="White" Width="73" Height="15" FontFamily="Poppins" Text="arabica coffee" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12,192,0,0" FontWeight="Light"></TextBlock>
                <TextBlock Foreground="#FFB87651" FontSize="14" FontFamily="Inter" FontWeight="Medium" Text="IDR." Margin="12,206,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBlock Foreground="White" FontSize="14" FontFamily="Inter" FontWeight="Medium" Text="18.000" Margin="39,206,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBlock>

                <Button Width="34" HorizontalAlignment="Right" Margin="0,163,11,0" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Height="34">
                    <Image Source="/img/Icon Arrow 2.png" Width="34"/>
                </Button>
            </Grid>
            <Grid Width="181" Height="239" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <Border Width="181" Height="239" Background="#FF202020" CornerRadius="20, 20, 20, 20"/>
                <Grid Width="163" Margin="9,10,9,0" VerticalAlignment="Top">
                    <Button Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}">
                        <Image Source="/img/Drink Image 4.png" ></Image>
                    </Button>
                    <Image Source="/img/Icon Rating.png" Width="41" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,6,0,0"></Image>
                    <Button Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Width="44" Height="44" HorizontalAlignment="Right" Margin="0,3,6,0" VerticalAlignment="Top">
                        <Image Source="/img/Icon Love 3.png"></Image>
                    </Button>
                </Grid>

                <TextBlock Foreground="#FFB87651" FontFamily="Mada" FontWeight="Medium" FontSize="20" Text="Latte Art" Margin="11,171,0,0" Height="26" HorizontalAlignment="Left" VerticalAlignment="Top" Width="76"/>
                <TextBlock Foreground="White" Width="73" Height="15" FontFamily="Poppins" Text="with fresh milk" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12,192,0,0" FontWeight="Light"></TextBlock>
                <TextBlock Foreground="#FFB87651" FontSize="14" FontFamily="Inter" FontWeight="Medium" Text="IDR." Margin="12,206,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBlock Foreground="White" FontSize="14" FontFamily="Inter" FontWeight="Medium" Text="20.000" Margin="39,206,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBlock>

                <Button Width="34" HorizontalAlignment="Right" Margin="0,163,11,0" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Height="34">
                    <Image Source="/img/Icon Arrow 2.png" Width="34"/>
                </Button>
            </Grid>
        </Grid>
        <Grid Height="90" Margin="0,-14,0,0">
            <Image Source="/img/Navbar 2.png" Height="80" HorizontalAlignment="Center" Margin="0,2,0,8"/>
            <Grid Width="76" Height="76" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-76,0,0">
                <Ellipse Width="72" Height="72" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="2,-6,2,0"/>
                <Button HorizontalAlignment="Center" Margin="15,11,15,25" Width="46" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Height="40" VerticalAlignment="Center">
                    <Image Source="/img/Icon Love 4.png"></Image>
                </Button>

            </Grid>
            <Button Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Width="26" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="75,0,0,0" Click="BtnClick10">
                <Image Source="/img/Icon Home2.png" Width="23"></Image>
            </Button>
            <Button Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Width="34" Height="33" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,75,0" Click="BtnClick8">
                <Image Source="/img/Icon Cart 3.png" Width="26" Height="25"/>
            </Button>
        </Grid>

    </StackPanel>
</Page>
